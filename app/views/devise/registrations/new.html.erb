<section class="max-w-lg px-5 md:px-0 min-h-screen mx-auto py-20">
  <div class="w-full flex items-center justify-center">
    <%= image_tag('logo.svg', {class: "w-[70%]"}) %>
  </div>
  <h1 class="typography-title-b-lh150 text-dark-palette-p4 text-center mt-10">Registrar</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="grid gap-5">
      <div class="grid gap-1">
        <%= f.label :email, class: "typography-text-m-lh150 text-dark-gray-palette-p1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
        <!-- <div class="invalid-feedback typography-body-s-lh150 text-auxiliary-palette-red">
          Please fill in your email
        </div> -->
      </div>
      <div class="grid gap-1">
        <div class="flex items-center justify-between">
          <%= f.label :password, class: "typography-text-m-lh150 text-dark-gray-palette-p1" %>
          <%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: "typography-text-m-lh150 text-dark-gray-palette-p1 hover:text-brand-palette-02 hidden" %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input w-full" %>
        <% if @minimum_password_length %>
          <p class="invalid-feedback typography-sub-text-r-lh150 text-dark-gray-palette-p1">(<%= @minimum_password_length %> characters minimum)</p>
        <% end %>
      </div>
      <div class="grid gap-1">
        <div class="flex items-center justify-between">
          <%= f.label :password_confirmation, class: "typography-text-m-lh150 text-dark-gray-palette-p1" %>
          <%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: "typography-text-m-lh150 text-dark-gray-palette-p1 hover:text-brand-palette-02 hidden" %>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input w-full" %>
      </div>
      
      <%= f.submit "Cadastrar", class:"btn-primary cursor-pointer" %>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>

</section>
