  <div class="divider-sidebar hidden h-[2px] w-full bg-light-palette-p3"></div>
  <ul class="flex flex-col space-y-3 border-b-md">
    <li class="<%= ' bg-brand-palette-08  !border-brand-palette-07 rounded-md !text-brand-palette-03 pointer-events-none' if request.path.include?('pipelines') or request.path.include?('deal') %> text-dark-gray-palette-p3 border-2 border-transparent icons-button-sidebar hover:bg-brand-palette-08 hover:rounded-md">
      <%= link_to(account_pipelines_path(current_user.account), class: 'icons-link-sidebar flex space-x-3 p-3 items-center') do %>
