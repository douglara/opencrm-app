<div class="hidden sidebar ease-in duration-300 sm:block sm:w-60 h-screen border-r-2 border-light-palette-p3 relative p-4 space-y-4 ">
  <div class="flex items-center flex-wrap justify-between">
    <%= link_to(root_path()) do %>     
      <%= image_tag "logo.svg", class: 'logo-sidebar w-36' %>
    <% end %>
    <%= link_to(root_path()) do %>
