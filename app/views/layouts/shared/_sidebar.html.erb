<div class="flex flex-col fixed left-0 top-0 h-screen w-[12.5rem] bg-light-palette-p5 items-center" style="z-index: 999;">
  <div class="w-full h-2 flex items-center my-3">
    <div>
      <%= link_to(root_path()) do %>
        <%= image_tag "logo.png", class: 'ml-2.5 max-w-[120px]' %>
      <% end %>
    </div>
    <div>
      <a href="#" class="px-2 py-2 text-dark-gray-palette-p3 font-bold uppercase text-sm rounded border outline-none mr-1 mt-2 ml-2" type="button">
        <i data-lucide="menu" class="h-4 w-4"></i>
      </a>
    </div>
  </div>
  <li class="list-none pt-3 <%= 'active' if request.path.include?('pipelines') or request.path.include?('deal') %>">
    <%= link_to(account_pipelines_path(current_user.account), class: 'd-flex align-items-center') do %>
      <div class="w-5 h-5 mr-2 fill-dark-gray-palette-p3">
        <%= embedded_svg('deals-icon.svg') %>
      </div>
        <span class="ml-2 text-dark-gray-palette-p3">Neg√≥cios</span>
    <% end %>
  </li>
  <li class="list-none pt-3 <%= 'active' if request.path.include?('contact') or request.path.include?('contact') %>">
    <%= link_to(account_contacts_path(current_user.account), class: 'd-flex align-items-center') do %>
    <div class="w-6 h-6 mr-2 fill-dark-gray-palette-p3">
      <%= embedded_svg('contacts-icon.svg') %>
    </div>
      <span class="ml-2 text-dark-gray-palette-p3">Contatos</span>
    <% end %>
  </li>
  <div class="mt-auto">
    <li class="list-none mt-auto mb-2 text-center">
      <%= link_to(account_settings_path(current_user.account), class: 'd-flex align-items-center') do %>
      <div class="w-5 h-5 mr-2 mb-3 fill-dark-gray-palette-p3">
        <%= embedded_svg('company-icon.svg')  %>
      </div>
        <span class="ml-2 mb-3 text-dark-gray-palette-p3">Empresa</span>
      <% end %>
    </li>
  </div>
</div>