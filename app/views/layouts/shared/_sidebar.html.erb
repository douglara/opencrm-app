      <% end %>
    </li>
    <li class="<%= ' bg-brand-palette-08 !border-brand-palette-07 rounded-md !text-brand-palette-03 pointer-events-none' if request.path.include?('contact') or request.path.include?('contact') %> text-dark-gray-palette-p3 border-2 border-transparent icons-button-sidebar hover:bg-brand-palette-08 hover:rounded-md">
      <%= link_to(account_contacts_path(current_user.account), class: 'icons-link-sidebar flex space-x-3 p-3 items-center') do %>
        <%= embedded_svg("contacts-icon.svg", class: "w-4 #{'!fill-brand-palette-03 ' if request.path.include?('contact') or request.path.include?('contact')} icon-sidebar fill-dark-gray-palette-p3") %>
