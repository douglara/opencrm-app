<div>
  <div class="flex items-center">
    <div class="d-flex align-items-center justify-content-center" style="height: 100%;">
      <%= link_to(:back, class: 'ml-3 w-btn-block ml-auto float-right') do %>
        <i data-lucide="chevron-left"></i>
      <% end %> 
    </div>

    <div class="h-full flex items-center border-r-2 border-light-palette-p3 px-16">
      <p class="m-0 font-semibold"><%= @deal.name %></p>
    </div>

    <div class="h-full flex items-center mx-3">
      <p class="m-0"><%= @deal.stage.pipeline.name %></p>
    </div>

    <div class="h-full flex items-center mx-3">
      <i class="fas fa-chevron-right icon"></i>
    <div>

    <div class="h-full flex items-center mx-3">
      <p class="m-0"><%= @deal.stage.name %></p>
    </div>
  </div>

  <div class="absolute right-0 mr-3">
    <%= link_to(
      'Perdido',
      account_deal_path(current_user.account, @deal, deal: { status: 'lost'} ),
      method: :patch,
      data: { confirm: 'Are you sure?' },
      class: 'btn-lg button-perda mr-2') %>

    <%= link_to(
      'Ganho',
      account_deal_path(current_user.account, @deal, deal: { status: 'won'}),
      method: :patch,
      data: { confirm: 'Are you sure?' },
      class: 'btn-lg button-ganho') %>

  </div>
</div>