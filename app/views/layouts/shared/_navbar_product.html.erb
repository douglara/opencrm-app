<% if ['new'].include?(action_name) %>
  <h1 class="typography-title-b-lh150 text-dark-gray-palette-p1">
    <%= t('activerecord.models.product.new') %>
  </h1>
<% else %>
  <h1 class="typography-title-b-lh150 text-dark-gray-palette-p1">
    <%= t('activerecord.models.product.other') %>
  </h1>
  <%= link_to t('activerecord.models.product.new'), new_account_product_path(current_user.account), class: 'btn-secondary', data: { turbo_frame: :drawer }%>
<% end %>
