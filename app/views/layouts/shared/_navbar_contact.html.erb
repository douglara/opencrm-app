<% if ['new'].include?(action_name) %>
  <h1 class="typography-title-b-lh150 text-dark-gray-palette-p1">
    <%= t('activerecord.models.contact.new') %>
  </h1>
<% elsif ['edit'].include?(action_name) %>
  <h1 class="typography-title-b-lh150 text-dark-gray-palette-p1">
    <%= t('activerecord.models.contact.edit') %>
  </h1>
<% else %>
  <h1 class="typography-title-b-lh150 text-dark-gray-palette-p1">
    <%= t('activerecord.models.contact.other') %>
  </h1>
  <%= link_to t('activerecord.models.contact.new'), new_account_contact_path(current_user.account), class: 'btn-secondary', data:{ turbo_frame: :drawer }%>
<% end %>
