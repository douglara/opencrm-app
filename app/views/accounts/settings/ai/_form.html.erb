<%= form_with( model: account, url: url, html:{class: "flex flex-col gap-5"} ) do | form | %>
  <% if account.errors.any? %>
    <div>
      <ul>
        <% account.errors.each do |error| %>
          <li class="typography-body-s-lh150 text-auxiliary-palette-red"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h2 class= "typography-body-s-lh150 text-dark-gray-palette-p1">
    <%= t('views.accounts.settings.ai.form.account_data') %>
  </h2>
  <div class="border-t border-light-palette-p3 p-3 space-y-2">
    <div class=" flex items-center justify-start py-2">
      <%= form.check_box :woofbot_auto_reply, class: 'rounded text-brand-palette-03 focus:border-transparent focus:ring-0', data: {"event-send-message-form-target": "checkBoxAutoDone"} %>
      <%= form.label :woofbot_auto_reply, t('views.accounts.settings.ai.form.ai_answer'), class: 'px-3 m-0 typography-text-m-lh150 text-dark-gray-palette-p1' %>
    </div>
  </div>
  <div class="flex gap-2 self-end">
    <%= form.submit t('views.accounts.settings.ai.form.save'), class: 'btn-primary cursor-pointer' %>
  </div>
<% end %>
