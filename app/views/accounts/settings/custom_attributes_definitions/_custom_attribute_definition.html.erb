<%= content_tag :div, id: dom_id(custom_attribute_definition), class: "grid gap-5 border-b-2 border-light-palette-p3 last:border-none py-5 first:pt-0 last:pb-0", data: {controller: 'load-lucid-icons'} do %>
  <li class= "flex items-center gap-4">
    <div class="p-2.5 rounded-lg border-2 border-light-palette-p3 bg-light-palette-p4">
      <i data-lucide="wrench" class="w-5 stroke-dark-gray-palette-p3"></i>
    </div>
    <div class="mr-auto">
      <div class="flex items-center gap-1.5">
        <h2 class="typography-text-s-lh150 text-dark-gray-palette-p1">
          <%= custom_attribute_definition.attribute_display_name %>
        </h2>
        <p class="typography-sub-text-r-lh150 text-dark-gray-palette-p4">
          <%= custom_attribute_definition.attribute_key %>
        </p>
      </div>
      <p class= "typography-sub-text-s-lh150 text-dark-gray-palette-p4"><%= CustomAttributeDefinition.human_attribute_name(custom_attribute_definition.attribute_model) %></p>
    </div>
    <button id="dropdownCustomAttributesBtn<%= custom_attribute_definition.id %>" data-dropdown-toggle="dropdownCustomAttributesOptions<%= custom_attribute_definition.id %>" data-dropdown-placement="bottom" class="inline-flex  items-center p-2 bg-white rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none dark:text-white focus:ring-gray-50 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-600" type="button">
      <i data-lucide="more-vertical" class=" stroke-dark-gray-palette-p3"></i>
    </button>
    <div id="dropdownCustomAttributesOptions<%= custom_attribute_definition.id %>" class="z-10 hidden left-16 bg-white divide-y divide-gray-100 rounded-lg shadow w-48 dark:bg-gray-700 z-50">
      <ul class="py-2 typography-text-m-lh150 text-dark-gray-palette-p3  dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
        <li>
          <%= link_to edit_account_custom_attributes_definition_path(custom_attribute_definition.account, custom_attribute_definition), class: 'flex items-center space-x-2 px-4 py-2 hover:bg-gray-100 hover:text-dark-gray-palette-p1 dark:hover:bg-gray-600 dark:hover:text-white ' do %>
            <i data-lucide="pencil"></i>
            <p>
              <%= t('views.accounts.settings.custom_attributes_definitions.custom_attribute_definition.edit') %>
            </p>
          <% end %>
        </li>
        <li>
          <%= link_to account_custom_attributes_definition_path(custom_attribute_definition.account, custom_attribute_definition), method: :delete, data: { confirm: t('views.accounts.settings.custom_attributes_definitions.custom_attribute_definition.are_you_sure?') }, class: 'flex items-center space-x-2 px-4 py-2 hover:bg-gray-100 hover:text-dark-gray-palette-p1 dark:hover:bg-gray-600 dark:hover:text-white ' do %>
            <i data-lucide="trash"></i>
            <p>
              <%= t('views.accounts.settings.custom_attributes_definitions.custom_attribute_definition.delete') %>
            </p>
          <% end %>
        </li>
      </ul>
    </div>
  </li>
<% end %>
