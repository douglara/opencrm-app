<section class="m-8 bg-light-palette-p5 border-2 border-light-palette-p3 rounded-md ">
  <header class="flex justify-end items-center text-dark-gray-palette-p3 px-4 py-5 border-b-2 border-light-palette-p3">
    <%= link_to 'Novo campo personalizado', new_account_custom_attributes_definition_path(current_user.account), class: 'btn-secondary'%>
  </header>
  <ul class="px-4 py-5 space-y-5">
    <% @custom_attributes_definitions.each do | custom_attributes_definition | %>
      <li  class= "flex items-center gap-4">
        <div class="p-2.5 rounded-lg border-2 border-light-palette-p3 bg-light-palette-p4">
          <i data-lucide="wrench" class="w-5 stroke-dark-gray-palette-p3"></i>
        </div>
        <div class="mr-auto">
          <div class="flex items-center gap-1.5">
            <h2 class="typography-text-s-lh150 text-dark-gray-palette-p1"><%= custom_attributes_definition.attribute_display_name %></h2>
            <p class="typography-text-r-lh150 text-dark-gray-palette-p4" ><%= custom_attributes_definition.attribute_key %> </p>
          </div>
          <p class= "typography-sub-text-s-lh150 text-dark-gray-palette-p4 hover:text-dark-gray-palette-p3"><%= CustomAttributeDefinition.human_attribute_name(custom_attributes_definition.attribute_model) %></p>
        </div>
        <button id="dropdownContactBtn" data-dropdown-toggle="dropdownContactOptions" data-dropdown-placement="left-start" class="inline-flex  items-center p-2 bg-white rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none dark:text-white focus:ring-gray-50 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-600" type="button">
          <i data-lucide="more-vertical" class=" stroke-dark-gray-palette-p3"></i>
        </button>
        <div id="dropdownContactOptions" class="z-10 hidden left-16 bg-white divide-y divide-gray-100 rounded-lg shadow w-48 dark:bg-gray-700">
          <ul class="py-2 typography-text-m-lh150 text-dark-gray-palette-p3  dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
            <li>
              <a href="#" class="flex items-center space-x-2 px-4 py-2 hover:bg-gray-100 hover:text-dark-gray-palette-p1 dark:hover:bg-gray-600 dark:hover:text-white"><i data-lucide="info"></i> <p>Detalhes</p></a>
            </li>
            <li>
              <a href="#" class="flex items-center space-x-2 px-4 py-2 hover:bg-gray-100 hover:text-dark-gray-palette-p1 dark:hover:bg-gray-600 dark:hover:text-white"><i data-lucide="trash"></i> <p>Excluir</p></a>
            </li>
          </ul>
        </div>
      </li>
      <div class="w-full h-0.5 bg-light-palette-p3 last:hidden"></div>
    <% end %>
  </ul>
</section>

