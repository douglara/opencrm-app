<%= turbo_frame_tag event do %>
  <div class="group event-<%= event.scheduled_kind %> event-item-<%= event.from %> my-3" data-controller="load-lucid-icons">
    <div class="<%= event.has_media_attachment? ? 'w-[500px]' : 'w-3/4' %> block rounded-lg bg-white border border-light-palette-p3 rounded dark:bg-neutral-700">
      <div class="border-b-2 border-neutral-100 bg-light-palette-p4 px-3 py-2 flex items-center space-x-3">
        <% if event.from_me? %>
          <% if event.note? %>
            <div class="flex item-center justify-center h-8 w-8 p-1.5 rounded-full border-2 border-light-palette-p3 bg-[#f4fdf7]">
              <i data-lucide="check" class= "h-[20px] self-center stroke-[#26D367]"></i>
            </div>
          <% elsif event.activity? %>
            <% if event.done? %>
              <%= link_to account_contact_event_path(event.account, event.contact, event, deal_id: event&.deal&.id, event:{done: false}) ,method: :put, data: {confirm: "Are you sure?"}, class:'flex item-center justify-center h-8 w-8 p-1.5 rounded-full border-2 border-light-palette-p3 bg-[#f4fdf7] hover:bg-[#DEFFE9] cursor-pointer'  do %>
                <i data-lucide="check" class= "h-[20px] self-center stroke-[#26D367]"></i>
              <% end %>
            <% else %>
              <%= link_to '' ,account_contact_event_path(event.account, event.contact, event, deal_id: event&.deal&.id, event:{done: true}) ,method: :put, data: {confirm: "Are you sure?"}, class: 'h-8 w-8 p-1.5 rounded-full border-2 border-light-palette-p2 bg-light-palette-p5 hover:bg-light-palette-p3 cursor-pointer' %>
            <% end %>
          <% elsif event.kind_message? %>
            <% if event.done? %>
              <div class="flex item-center justify-center h-8 w-8 p-1.5 rounded-full border-2 border-light-palette-p3 bg-[#f4fdf7]">
                <i data-lucide="check-check" class= "h-[20px] self-center stroke-[#26D367]"></i>
              </div>
            <% else %>
              <%= link_to '' ,account_contact_event_path(event.account, event.contact, event, deal_id: event&.deal&.id, event:{send_now: true}) ,method: :put, data: {confirm: "Are you sure?"}, class: 'h-8 w-8 p-1.5 rounded-full border-2 border-light-palette-p2 bg-light-palette-p5 hover:bg-light-palette-p3 cursor-pointer' %>
            <% end %>
          <% end %>
        <% else %>
          <div class="flex items-center rounded-full border-light-palette-p3 border h-8 w-8 bg-light-palette-p5 group-[.event-item-from-me]:hidden">
            <i class="m-auto text-auxiliary-palette-blue" data-lucide="user" height="20"></i>
          </div>
        <% end %>
        <div class="flex-grow py-1">
         <div class="flex items-center gap-2">
          <span class="m-0 text-dark-gray-palette-p1 typography-text-s-lh150 flex items-center gap-1.5">
            <%= event.kind == 'activity' ? event.title : Event.human_attribute_name(event.kind) %>
          </span>
          <%= embedded_svg('icon-whtass.svg', {class: "w-3.5 fill-[#26D367]"}) if event.evolution_api_message? %>
          <i data-lucide="<%= event.icon_key %>" class="<%= event.icon_key %> self-center"></i>
         </div>
          <% if event.scheduled_at.present? %>
            <span class="m-0 text-brand-palette-04 group-[.event-scheduled]:font-semibold group-[.event-item-from-contacts]:text-dark-gray-palette-p4">Prazo: <%= event.primary_date %></span>
          <% else %>
            <p class="m-0 typography-subtext-m-lh150 text-dark-gray-palette-p4"><%= event.primary_date %></p>
          <% end %>
        </div>
        <% if event.editable? %>
          <div class="mb-auto">
            <button id="dropdownMenuIconHorizontalButton" data-dropdown-toggle="dropdownMenuActions<%= event.id %>" class="inline-flex mr-1 items-center p-1 text-sm font-medium text-center text-gray-900 bg-transparent rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none dark:text-white focus:ring-gray-50 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-600" type="button">
              <i data-lucide="more-horizontal" class="text-gray-pallete-p3"></i>
            </button>
          </div>
        <% end %>
      </div>
        <!-- Dropdown menu -->
      <div id="dropdownMenuActions<%= event.id %>" class="z-10 hidden w-48 left-16  bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700">
        <ul class="py-2 typography-text-m-lh150 text-dark-gray-palette-p3  dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
          <li>
            <%= link_to edit_account_contact_event_path(event.account, event.contact, event), class: 'flex items-center space-x-2 px-4 py-2 hover:bg-gray-100 hover:text-dark-gray-palette-p1 dark:hover:bg-gray-600 dark:hover:text-white' do%>
              <i data-lucide="file-edit"></i> <p>Editar</p>
            <%end%>
          </li>
          <li>
            <%= link_to account_contact_event_path(event.account, event.contact, event), method: :delete, class: 'flex items-center space-x-2 px-4 py-2 hover:bg-gray-100 hover:text-dark-gray-palette-p1 dark:hover:bg-gray-600 dark:hover:text-white' do%>
            <i data-lucide="trash-2"></i>
              <p>Excluir</p></a>
          <%end%>
          </li>
        </ul>
      </div>
      <div class="py-3 px-4 space-y-3">
        <%= event.content %>
        <% if event.has_attached_image? %>
          <div class="flex items-center justify-center" data-controller="lightbox">
            <%= link_to rails_blob_url(event.attachment.file) do %>
              <%= image_tag event.attachment.file, class: 'rounded-lg max-w-[440px]' %>
            <% end %>
          </div>
        <% end %>
        <% if event.has_attached_audio? %>
          <div data-controller="wavesurfer" data-wavesurfer-event-id-value="<%= event.id %>" data-wavesurfer-audio-url-value="<%= rails_blob_path(event.attachment.file) %>" data-wavesurfer-pause-svg-url-value="<%= asset_path('pause-solid.svg') %>" data-wavesurfer-play-svg-url-value="<%= asset_path('play-solid.svg') %>" data-wavesurfer-volume-high-svg-url-value="<%= asset_path('volume-high-solid.svg') %>" data-wavesurfer-volume-muted-svg-url-value="<%= asset_path('volume-muted-solid.svg') %>" class="space-y-4">
            <div class="flex items-center gap-5">
              <button data-wavesurfer-target="playBtn">
                <img src="<%= asset_path('play-solid.svg') %>" alt="" class="w-7" data-wavesurfer-target="playIcon">
              </button>
              <div id="waveform<%= event.id %>" class="w-full flex items-center justify-center">
                <div data-wavesurfer-target="loading">
                  <%= render 'components/loading' %>
                </div>
              </div>
              <p class="typography-body-m-lh150 text-dark-gray-palette-p3" data-wavesurfer-target="duration"></p>
            </div>
            <div class="flex items-center justify-between">
              <button data-popover-target="popover-no-arrow-<%= event.id %>" data-popover-placement="right" type="button" class="typography-text-s-lh150 text-dark-gray-palette-p3 hover:text-brand-palette-03 focus:text-brand-palette-03 w-6 h-6" data-wavesurfer-target="toggleMute" aria-disabled="true">
                <img src="/assets/volume-high-solid.svg" alt="" class="w-5" data-wavesurfer-target="volumeIcon">
              </button>
              <div data-popover id="popover-no-arrow-<%= event.id %>" role="tooltip" class="absolute z-10 invisible inline-block w-64 text-sm text-gray-500 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg shadow-sm opacity-0 dark:text-gray-400 dark:border-gray-600 dark:bg-gray-800">
                <div class="px-3 py-2">
                  <input id="small-range" data-wavesurfer-target="volumeRange" type="range" class="w-full h-1 bg-gray-200 rounded-lg accent-slate-500 cursor-pointer range-sm dark:bg-gray-700">
                </div>
              </div>
              <div class="flex gap-2.5 speed-wrapper">
                <button class="btn-secondary aria-selected:cursor-default aria-selected:bg-brand-palette-07 aria-selected:text-brand-palette-03" data-wavesurfer-target="speed1x" aria-selected="true">1x</button>
                <button class="btn-secondary aria-selected:cursor-default aria-selected:bg-brand-palette-07 aria-selected:text-brand-palette-03" data-wavesurfer-target="speedHalfx">1.5x</button>
                <button class="btn-secondary aria-selected:cursor-default aria-selected:bg-brand-palette-07 aria-selected:text-brand-palette-03" data-wavesurfer-target="speed2x">2x</button>
              </div>
              <%= link_to rails_blob_path(event.attachment.file), class: "btn-secondary p-2.5",  download: true do %>
                <i data-lucide="download" style="width: 20px;
                height: 20px;"></i>
              <%end%>
            </div>
          </div>
        <% end %>
        <% if event.has_attached_file? %>
        <div class="flex gap-3">
          <i data-lucide="file" style="width: 40px; height: 40px" class=" stroke-dark-gray-palette-p3"></i>
          <div>
            <p class="typography-text-s-lh150 text-dark-gray-palette-p3">
              <%= event.attachment.file.filename.to_s %>
            </p>
            <%= link_to 'Download', rails_blob_path(event.attachment.file), class: "typography-text-r-lh150 text-dark-gray-palette-p3 underline",  download: true %>
          </div>
        </div>
        <% end %>
        <% if event.has_attached_video? %>
          <div class="flex items-center justify-center">
            <%= video_tag rails_blob_url(event.attachment.file), size:'300x300', controls: true, data: { controller: 'lightbox'}, class: 'rounded-lg' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
