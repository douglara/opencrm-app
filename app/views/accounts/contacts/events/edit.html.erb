<%= turbo_frame_tag @event do %>
<div class="group event-<%= @event.scheduled_kind %> event-item-<%= @event.from %> my-2">
    <div class="w-3/4 block rounded-lg bg-white border border-light-palette-p3 rounded dark:bg-neutral-700">
        <div class="border-b-2 border-neutral-100 bg-light-palette-p4 px-6 py-4 flex items-center">
            <h1 class="typography-body-s-lh150 text-dark-gray-palette-p1">Editar <%=  @event.title %></h1>
        </div>

        <%= form_with(model: @event, url: account_contact_event_path(current_user.account, contact_id: @event.contact.id, deal_id: @event.deal_id), method: :patch, namespace: 'activity', class: "flex flex-col gap-5") do |form| %>
            <% if @event.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@event.errors.count, "error") %> prohibited this activity kind from being saved:</h2>

                <ul>
                <% @event.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
                </ul>
            </div>
            <% end %>

            <%= form.hidden_field :kind, value: 'activity' %>
            <%= form.hidden_field :deal_id %>

            <div class="space-y-2 p-4">
            <%= form.label :title, 'Tipo', class:'py-1 typography-text-m-lh150 text-dark-gray-palette-p1' %>
            <%= form.text_field :title, class: 'form-input w-full' %>
            </div>

            <div class="border-t border-light-palette-p3 p-4 space-y-2">
            <%= form.label :content, 'Descrição', class:'typography-text-m-lh150 text-dark-gray-palette-p1' %>
            <%= form.rich_text_area :content, class: 'form-input' %>
            </div>

            <div class="border-t border-light-palette-p3 p-4 space-y-2">
            <%= form.label :due, "Agendar", class: 'typography-text-m-lh150 text-dark-gray-palette-p1' %>
            <%= form.date_field :due, class: 'form-input w-full', type: 'datetime-local', required: true %>
            </div>
            <div class="flex flex-row-reverse border-t border-light-palette-p3 p-4">
                <div class="flex items-center gap-2">
                    <%= link_to 'Cancelar', '#', class: 'btn-secondary cursor-pointer', data: { turbo_action: 'replace' } %>
                    <%= form.submit 'Confirmar', class: 'btn-primary cursor-pointer' %>
                </div>
                <div class="mr-auto flex items-center">
                    <%= form.check_box :done, class: 'rounded text-brand-palette-03 focus:border-transparent focus:ring-0' %>
                    <%= form.label :done, "Marcar atividade como feita", class: 'px-3 m-0 typography-text-m-lh150 text-dark-gray-palette-p1' %>
                </div>
            </div>
        <% end %>
    </div>
</div>
<%end%>