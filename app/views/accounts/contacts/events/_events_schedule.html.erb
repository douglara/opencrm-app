<div class="border-b pb-6">
  <div class="my-2">
    <span class="text-brand-palette-03 background-transparent font-semibold text-sm flex items-center">
      <i data-lucide="calendar" height="18" class="mr-2"></i> Agendado
    </span>
  </div>

  <% @deal.events.planned.each do | event | %>
    <div class="flex flex-row-reverse pb-3">
      <div class="w-3/4 block rounded-lg bg-white border border-light-palette-p3 rounded dark:bg-neutral-700">
        <div class="border-b-2 border-neutral-100 bg-light-palette-p4 px-3 py-2 flex items-center">
          <div class="mr-3">
            <input id="default-checkbox" type="checkbox" value="" class="w-4 h-4 text-blue-600 rounded">
          </div>
          <div class="flex-grow">
            <p class="m-0 text-dark-gray-palette-p1"><%= Event.human_attribute_name(event.kind) %></p>
            <p class="m-0 text-brand-palette-04">Prazo: <%= event.primary_date %></p>
          </div>
          <div class="mb-auto">
            <a>
              <i data-lucide="more-horizontal" height="20"></i>
            </a>
          </div>
        </div>
        <div class="p-6">
          <p class="m-0">
            <%= event.content %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
