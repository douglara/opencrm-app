<li class="cursor-pointer">
  <a data-action="click->contact-select#select" contact-name="<%= contact.full_name %>" value="<%= contact.id%>" class="flex items-center px-4 py-2 gap-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white hover:no-underline">
    <div class="p-2.5 rounded-lg border-2 border-light-palette-p3 bg-light-palette-p4">
      <i data-lucide="user" class="w-5 stroke-dark-gray-palette-p3"></i>
    </div>
    <div >
      <div class="flex items-center gap-1.5">
        <h2 class="typography-text-s-lh150 text-dark-gray-palette-p1"><%= contact.full_name %></h2>
        <p class="typography-text-r-lh150 text-dark-gray-palette-p4 flex items-center gap-0.5"><%= contact.email %></p>
      </div>
      <p class="typography-sub-text-s-lh150 text-dark-gray-palette-p4 hover:text-dark-gray-palette-p3"><%=contact.phone %></p>
    </div>
  </a>
</li>
