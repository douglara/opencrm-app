<%= form_with(model: chatwoot, url: account_apps_chatwoots_path(current_user.account), data: {turbo: false}, id: 'formId', class: 'flex flex-col gap-5') do |form| %>
  <% if chatwoot.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% chatwoot.errors.each do |error| %>
          <li class="typography-body-s-lh150 text-auxiliary-palette-red"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="grid gap-2">
    <%= form.label :chatwoot_endpoint_url, class: 'typography-text-m-lh150 text-dark-gray-palette-p1' %>
    <%= form.text_field :chatwoot_endpoint_url, placeholder: 'https://www.chatwoot.com/',  class: 'form-input' %>
  </div>
  <div class="grid gap-2">
    <%= form.label :chatwoot_account_id, class: 'typography-text-m-lh150 text-dark-gray-palette-p1' %>
    <%= form.text_field :chatwoot_account_id, placeholder: '1',  class: 'form-input' %>
  </div>
  <div class="grid gap-2">
    <%= form.label :chatwoot_user_token, class: 'typography-text-m-lh150 text-dark-gray-palette-p1' %>
    <%= form.text_field :chatwoot_user_token, placeholder: 'LsdhksdjfhAJSJFfdfsdfdfASdsadASFDfghfgjghjghkhjlyui',  class: 'form-input' %>
  </div>
  <%= form.submit class: 'btn-primary cursor-pointer self-end' %>
<% end %>
