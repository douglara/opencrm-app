<%= turbo_frame_tag @deal_product do %>
  <%= form_with(model: @deal_product, url: account_deal_products_path) do |form| %>
    <%= form.hidden_field :deal_id %>
    <div class=" flex items-center h-16">
      <p class="flex items-center m-0 mr-auto typography-body-s-lh150 text-dark-gray-palette-p1">
        <%= t('activerecord.models.product.other') %>
      </p>
      <%= form.submit t('activerecord.models.product.add'), class: 'text-brand-palette-03 py-2 px-4 cursor-pointer  border-[1.5px] border-[#e5e7eb00] hover:border-brand-palette-06 hover:border-[1.5px] hover:bg-brand-palette-08 hover:rounded-md hover:text-brand-palette-03 transtion ease-in-out delay-250 typography-text-s-lh150'%>
      <%= link_to :back, class: 'px-1 py-2 cursor-pointer  border-[1.5px] border-[#e5e7eb00] hover:border-brand-palette-06 hover:border-[1.5px] hover:bg-brand-palette-08 hover:rounded-md hover:text-brand-palette-03 transtion ease-in-out delay-250 text-dark-gray-palette-p3 ' do %>
        <i data-lucide="x" height="16"></i>
      <% end %>
    </div>
    <% if @deal_product.errors.any? %>
      <div class='mb-4'>
        <ul>
          <% @deal_product.errors.each do |error| %>
            <li class="typography-body-s-lh150 text-auxiliary-palette-red"><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class='mb-2.5'>
      <%= turbo_frame_tag :select_product_search,
            src: select_product_search_account_deal_products_path(current_user.account), class: "relative" do %>
        <%= render 'components/loading' %>
      <% end %>
    </div>
  <% end %>
<% end %>
