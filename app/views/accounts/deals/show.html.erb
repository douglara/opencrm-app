
<div class="stage-bar mb-8 rounded-none md:hidden p-3 bg-light-palette-p5 border-b-2 border-light-palette-p3 rounded"> 
  <nav aria-label="breadcrumb" >
    <ol class="flex space-x-1 items-center text-center" >
      <%= render "/components/deals/stages_nav", deal: @deal %>
    </ol>
  </nav>
</div>

<section class="px-8 md:p-8 bg-brand-palette-08">
  <div class="hidden md:block mb-8 rounded-s p-3 bg-light-palette-p5 border-2 border-light-palette-p3 rounded"> 
    <nav aria-label="breadcrumb" >
      <ol class="flex space-x-2 items-center text-center" >
        <%= render "/accounts/deals/stages_nav_desktop", deal: @deal %>
      </ol>
    </nav>
  </div>
  <div class="grid grid-cols-1 min-[1400px]:grid-cols-[minmax(500px,_1fr)_3fr] gap-8 w-full ">
    <div class="">
      <%= render "/accounts/deals/details" %>
    </div>
  
    <div class="">
      <div class="gap-8">
        <%= turbo_frame_tag "new-event-form", src: new_account_contact_event_path(account_id: current_user.account, contact_id: @deal.contact.id, deal_id: @deal.id) %>
      </div>
      <div class="mt-8">
        <%= render "/accounts/contacts/events/events", deal: @deal, events: @events %>
      </div>
    </div>
  </div>
</section>
