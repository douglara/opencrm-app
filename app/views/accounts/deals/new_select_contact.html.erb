<section class="px-4 py-5 bg-light-palette-p5 border-2 border-light-palette-p3 rounded-md m-8">
  <%= form_with(model: @deal, url: new_account_deal_path(current_user.account), method: :get, class:"flex gap-3 items-center") do |form| %>
    <%= form.label :contact_id, "Contato", class: "typography-text-s-lh150 text-dark-gray-palette-p1" %>
    <%= form.select(:contact_id, current_user.account.contacts.pluck(:full_name , :id) , {},  {class: "form-input flex-1"}) %>
    <%= form.submit 'Continue', class: 'btn-primary cursor-pointer' %>
  <% end %>
</section>
