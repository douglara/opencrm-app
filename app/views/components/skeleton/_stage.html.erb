
<div class="px-4 pb-4 rounded border-2 border-light-palette-p3 bg-light-palette-p5 relative animate-pulse" data-controller="load-lucid-icons load-flowbite">
  <div class="flex py-3.5 justify-between items-center gap-1.5">
    <div class="h-2.5 bg-gray-200 rounded-full dark:bg-gray-700 w-48"></div>
    <i data-lucide="more-horizontal" class="text-gray-pallete-p3 w-5"></i>
    <div class="p-0 w-6 rounded-tr-lg absolute border-t-2 border-r-2 border-light-palette-p3 left-[285px] bg-light-palette-p5 rotate-45">
      <i data-lucide="chevron-right" class="text-light-palette-p1 -rotate-45 w-5"></i>
    </div>
  </div>
  <ul class="space-y-4 overflow-y-auto custom-scroll-list-deal h-[calc(100vh-240px)]" id="deals">
    <% rand(4..8).times do %>
      <div class="rounded border-2 border-light-palette-p3 bg-light-palette-p4 py-2 px-4 space-y-2">
        <div class="h-2 bg-gray-200 rounded-full dark:bg-gray-700 w-32 mb-4 mt-2"></div>
        <div class="w-full h-0.5 bg-light-palette-p3">
        </div>
        <div class="flex items-center justify-between gap-2">
          <div class="h-2 bg-gray-200 rounded-full dark:bg-gray-700 w-48 my-2"></div>
        </div>
      </div>
    <% end %>
  </ul>
</div>
