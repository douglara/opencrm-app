<div class="border-t border-light-palette-p3 p-3 mt-4 space-y-2" data-controller="upload-files">
  <p class="typography-text-m-lh150 text-dark-gray-palette-p1"> Arquivos </p>
  <div id='uploads' class="max-h-56 space-y-4 overflow-y-auto custom-scroll-list-deal">
    <input type="file" class="hidden" multiple data-upload-files-target="fileInput" data-action="change->upload-files#acceptFiles" name="event[files][]"/>
  </div>
  <div class='flex gap-2.5 '>
    <div class='btn-secondary p-2.5 mt-2 cursor-pointer' data-action="click->upload-files#trigger">
      <i data-lucide="paperclip"></i>
      <%# form.file_field :files, multiple: true, direct_upload: true, class: 'hidden', data: {"upload-files-target": "fileInput", action:'change->upload-files#acceptFiles'} %>
    </div>
    <%# <button class='btn-secondary p-2.5 mt-2'><i data-lucide="mic"></i></button> %>
  </div>
  <div>
    <% image_tag '', data: { upload_files_target: 'preview'} %>
  </div>
</div>
