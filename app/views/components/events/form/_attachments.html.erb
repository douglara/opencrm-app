<div class="border-t border-light-palette-p3 p-3 mt-4 space-y-2">
  <p class="typography-text-m-lh150 text-dark-gray-palette-p1"> Arquivos </p>
  <div class='flex gap-2.5 '>
    <button class='btn-secondary p-2.5 mt-2'><i data-lucide="paperclip"></i></button>
    <button class='btn-secondary p-2.5 mt-2'><i data-lucide="mic"></i></button>
  </div>
  <div data-controller="dropzone" class="dropzone dropzone-default dz-clickable " data-dropzone-max-file-size="1000" data-dropzone-max-files="10">
    <%= form.file_field :files, direct_upload: true, multiple: true, class: 'form-input w-full h-44 hidden', data: {"dropzone-target": "input"} %>
    <div class="dropzone-msg dz-message needsclick">
      <div class="flex flex-col items-center justify-center pt-5 pb-6">
        <i data-lucide="upload-cloud" class='stroke-gray-500' style='width: 30px; height: 30px'></i>
        <p class="mb-2 text-sm text-gray-500 dark:text-gray-400"><span class="font-semibold">Click to upload</span> or drag and drop</p>
        <p class="text-xs text-gray-500 dark:text-gray-400">MAX. 1gb</p>
      </div>
    </div>
  </div>
</div>
