<div data-events-form-target="kindNote" hidden class="h-full w-full pt-3">
  <%= form_with(model: @event, url: account_contact_events_path(current_user.account, contact_id: @deal.contact.id, deal_id: @deal.id), namespace: 'note') do |form| %>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@event.errors.count, "error") %> prohibited this activity kind from being saved:</h2>

        <ul>
          <% @event.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.hidden_field :kind, value: 'note' %>
    <%= form.hidden_field :deal_id %>

    <div class="p-3 mt-2">
      <%= form.label :content, 'Nota', class:'py-2 typography-text-m-lh150 text-dark-gray-palette-p1' %>
      <%= form.rich_text_area :content, class: 'form-input pb-2' %>
    </div>

    <div class="flex gap-2 flex-row-reverse border-t border-light-palette-p3 p-3 mt-4">
      <%= form.submit 'Confirmar', class: 'btn-primary cursor-pointer' %>

      <input type="button" value="Cancelar" data-action="click->events-form#selectNone" class="btn-secondary-2 cursor-pointer">
    </div>
  <% end %>
</div>