<%= turbo_frame_tag "kind_content" do %> <% end %>

<div>
  <div class="border-b-2 border-light-palette-p3 w-full h-full">
    <div class="flex flex-nowrap pb-3 px-3">
      <h2 class="text-lg w-fit">Ações</h2>
      <div class="flex justify-end ml-auto">
        <div class="mx-auto">
          <div class="flex space-x-2.5">
            <!-- Icone atividade -->
            <a href="#" class="pr-0.5 h-10 flex items-center text-sm text-gray-900 dark:placeholder-gray-400">
              <div class="px-2 rounded-l-lg border-y border-l border-gray-300 flex items-center text-sm bg-light-palette-p4 dark:text-gray-400 h-full w-full">
                <i data-lucide="clipboard-list" class="text-gray-pallete-p3"></i>
              </div>
              <div class="flex items-center rounded-r-lg border border-gray-300 bg-light-palette-p5 h-full w-full">
                <p class="m-0 px-3">Atividade</p>
              </div>
            </a>
            <!-- Icone nota -->
            <a href="#" class="pr-0.5 h-10 flex items-center text-sm text-gray-900 dark:placeholder-gray-400">
              <div class="px-2 rounded-l-lg border-y border-l border-gray-300 flex items-center text-sm bg-light-palette-p4 dark:text-gray-400 h-full w-full">
                <i data-lucide="menu-square" class="text-gray-pallete-p3"></i>
              </div>
              <div class="flex items-center rounded-r-lg border border-gray-300 bg-light-palette-p5 h-full w-full">
                <p class="m-0 px-3">Nota</p>
              </div>
            </a>
            <!-- Icone WhatsApp -->
            <a href="#" class="pr-0.5 h-10 flex items-center text-sm text-gray-900 dark:placeholder-gray-400">
              <div class="px-2 rounded-l-lg border-y border-l border-gray-300 flex items-center text-sm bg-light-palette-p4 dark:text-gray-400 h-full w-full">
                <i data-lucide="message-circle" class="text-gray-pallete-p3"></i>
                <%= embedded_svg('icon-whtass.svg') %>
              </div>
              <div class="flex items-center rounded-r-lg border border-gray-300 bg-light-palette-p5 h-full w-full">
                <p class="m-0 px-3">WhatsApp</p>
              </div>
            </a>
            <!-- Icone e-mail -->
            <a href="#" class="pr-0.5 h-10 flex items-center text-sm text-gray-900 dark:placeholder-gray-400">
              <div class="px-2 rounded-l-lg border-y border-l border-gray-300 flex items-center text-sm bg-light-palette-p4 dark:text-gray-400 h-full w-full">
                <i data-lucide="mail" class="text-gray-pallete-p3"></i>
              </div>
              <div class="flex items-center rounded-r-lg border border-gray-300 bg-light-palette-p5 h-full w-full">
                <p class="m-0 px-3">Email</p>
              </div>
            </a>
            <!-- Icone arrow down -->
            <div class="flex items-center">
              <a href="#" class="bg-light-palette-p4 ml-[2px] px-3.5 pb-[11px] pt-[11px] border rounded flex items-center">
                <i class="fas fa-chevron-down m-0 text-gray-pallete-p3"></i> 
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="flex justify-center items-center text-center">
    <div>
      <div class="flex justify-center items-center flex-col mt-4">
        <div class="border-2 rounded-md flex justify-center items-center text-center w-10 h-10 border-brand-palette-07 bg-brand-palette-08">
          <i data-lucide="layout-grid" class="ml-2 mr-2 h-14 text-brand-palette-03"></i>
        </div>
      </div>
      <div class="m-3">
        <p class="font-semibold mb-0 text-base text-gray-pallete-p1">Adicionar atividade</p>
        <p class="font-thin text-gray-pallete-p3">Clique aqui ou nos campos acima para adicionar uma atividade</p>
        <p></p>
      </div>
    </div>
  </div>
</div>
